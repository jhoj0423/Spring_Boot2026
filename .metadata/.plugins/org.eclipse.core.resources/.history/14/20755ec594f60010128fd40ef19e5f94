			@RequestParam("auther") String auther, 
			@RequestParam("isbn") String isbn, 
			@RequestParam("renter_name") String renter_name
			) {
		ModelAndView modelview = new ModelAndView();
		
//		modelview.addObject("book_name", book_name);
//		modelview.addObject("auther", auther);
//		modelview.addObject("isbn", isbn);
//		modelview.addObject("renter_name", renter_name);
		
//		modelview.addAllObjects("book_name",List.of("가방","오징어","사람","촛불","장승"));
//		modelview.addAllObjects("auther",List.of("리코더","플룻","기타","드럼","트럼펫"));
//		modelview.addAllObjects("isbn",List.of("두더지","다람쥐","땅강아지","비버","족제비"));
//		modelview.addAllObjects("renter_name",List.of("도마뱀","토끼","고양이","말","원숭이"));
		
		modelview.addAllObjects("book_name");
		modelview.addAllObjects("auther");
		modelview.addAllObjects("isbn");
