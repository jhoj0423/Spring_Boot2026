package com.green.controller;

import java.util.ArrayList;
import java.util.List;
import java.util.Map;

import org.springframework.stereotype.Controller;
import org.springframework.web.bind.annotation.GetMapping;
import org.springframework.web.bind.annotation.PostMapping;
import org.springframework.web.bind.annotation.RequestParam;
import org.springframework.web.servlet.ModelAndView;

@Controller
public class BookController {
	@GetMapping("/book/rental")
	public String bookrentalForm() {
		System.out.println("book_rental()");
		return "rental";
	}
	
	@PostMapping("/book/rentalProc")
	public ModelAndView bookrentalProcForm(
			@RequestParam("book_name") Map<String, ?> book_name, 
			@RequestParam("auther") Map<String, ?> auther, 
			@RequestParam("isbn") Map<String, ?> isbn, 
			@RequestParam("renter_name") Map<String, ?> renter_name
			) {
		ModelAndView modelview = new ModelAndView();
		
//		modelview.addObject("book_name", book_name);
//		modelview.addObject("auther", auther);
//		modelview.addObject("isbn", isbn);
//		modelview.addObject("renter_name", renter_name);
		book_name.add("book_name");
		auther.add("auther");
		isbn.add("isbn");
		renter_name.add("renter_name");
		
		
		modelview.addAllObjects(book_name);
		modelview.addAllObjects(auther);
		modelview.addAllObjects(isbn);
		modelview.addAllObjects(renter_name);
		
		modelview.setViewName("rentalProc");
		System.out.println("rentalProc()");
		
		return modelview;
		
	}


}
