package com.example.demo;

import org.springframework.stereotype.Controller;
import org.springframework.web.bind.annotation.GetMapping;

//Greeting  클래스는 Controller 의 역활을 하게 지정해줘
@Controller //Controller 이라는 Bean 객체가 생성되도록 어노테이션 처리
public class Greeting {
	
	//메소드
	@GetMapping("/") // http://localhost:8090/ => 홈페이지 주소
	public String greet() {
		System.out.println("greet()");
		return "home"; //페이지 이름 반환 home.html
	}
}
